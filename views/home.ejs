<%- include('./partials/header') %>

<div class="container py-5">
  <h3 class="mb-4 fw-bold text-center">COMMUNITY POSTS</h3>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% posts.forEach(post => { %>
      <div class="col">
        <div class="card h-100 text-center shadow-sm">
          <!-- image -->
          <img src="<%= post.imageUrl %>" class="card-img-top fixed-img" alt="Post image">

          <!-- caption -->
          <div class="card-body">
            <p class="card-text"><%= post.content %></p>
            <p>By <a href="/users/<%= post.author.id %>">Read more</a></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<style>
  .fixed-img {
    height: 250px;      /* force all images same height */
    object-fit: cover;  /* crop instead of stretch */
    width: 100%;
  }
</style>

<%- include('./partials/footer') %>    



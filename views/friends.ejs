<%- include('partials/header') %>

<style>
  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 20px;
  }

  h2 {
    text-align: center;
    margin-bottom: 30px;
    font-family: Arial, sans-serif;
  }

  .friends-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }

  .friend-card {
    width: 200px;
    padding: 15px;
    text-align: center;
    border: 1px solid #ddd;
    border-radius: 10px;
    background-color: #f9f9f9;
    transition: transform 0.2s ease;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }

  .friend-card:hover {
    transform: scale(1.05);
  }

  .friend-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 10px;
  }

  .follow-btn {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 8px 15px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .follow-btn:hover {
    background-color: #0056b3;
  }
</style>

<div class="container">
  <h2>People You May Know</h2>

  <% if (friendsSuggestions.length === 0) { %>
    <p class="text-center">No suggestions at the moment!</p>
  <% } else { %>
    <div class="friends-grid">
      <% friendsSuggestions.forEach(friend => { %>
        <div class="friend-card">
          <img src="<%= friend.profilePic || '/images/default-avatar.png' %>" alt="<%= friend.username %>" class="friend-avatar">
          <h4><%= friend.username %></h4>

          <form action="/users/follow/<%= friend.id %>" method="POST">
            <button type="submit" class="follow-btn">Follow</button>
          </form>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>

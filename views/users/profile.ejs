<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title><%= profile.username || 'Profile' %> â€¢ Instagram Clone</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      body {
        background-color: #fafafa;
        font-family: Arial, sans-serif;
      }

      .container {
        max-width: 700px;
        margin: 0 auto;
        padding: 20px;
      }

      .profile-header {
        display: flex;
        align-items: center;
        padding: 40px 0 20px;
      }

      .profile-pic-wrapper {
        position: relative;
        width: 120px;
        height: 120px;
        margin-right: 30px;
      }

      .profile-pic {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        cursor: pointer;
      }

      .add-story-btn {
        position: absolute;
        bottom: 0;
        right: 0;
        background: #0095f6;
        color: #fff;
        border-radius: 50%;
        width: 28px;
        height: 28px;
        text-align: center;
        line-height: 28px;
        font-size: 18px;
        font-weight: bold;
        border: 2px solid #fff;
      }

      .profile-username {
        font-size: 1.8rem;
        font-weight: 500;
      }

      .profile-stats {
        display: flex;
        gap: 20px;
        margin: 10px 0;
      }

      .profile-stats span {
        font-weight: bold;
      }

      .profile-bio {
        font-size: 0.95rem;
      }

      .highlights {
        display: flex;
        gap: 20px;
        padding: 20px 0;
        border-top: 1px solid #ddd;
        border-bottom: 1px solid #ddd;
        overflow-x: auto;
      }

      .highlight {
        text-align: center;
      }

      .highlight img {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        border: 1px solid #ccc;
      }

      .highlight div {
        font-size: 0.85rem;
        margin-top: 5px;
      }

      .posts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 5px;
        margin-top: 20px;
      }

      .posts-grid img {
        width: 100%;
        aspect-ratio: 1 / 1;
        object-fit: cover;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- Profile Header -->
      <div class="profile-header">
        
        <!-- Profile Pic + Story Upload -->
        <div class="profile-pic-wrapper">
          <form action="/users/stories" method="POST" enctype="multipart/form-data" id="storyForm">
            <label for="storyInput" class="profile-pic-label">
              <a href="/users/<%= profile.id %>/stories">
                <img src="<%= profile.profilePic || '/images/default_profile.png' %>" 
                     class="profile-pic <%= hasActiveStory ? 'story-active' : '' %>" alt="Profile Pic"> 
              </a>
              <% if (currentUser && currentUser.id === profile.id) { %>
                <span class="add-story-btn">+</span>
              <% } %>
            </label>
            <% if (currentUser && currentUser.id === profile.id) { %>
              <input type="file" id="storyInput" name="story" accept="image/*,video/*" hidden onchange="document.getElementById('storyForm').submit()">
            <% } %>
          </form>
        </div>

        <div>
          <div class="d-flex align-items-center gap-3">
            <h2 class="profile-username"><%= profile.username || 'Unknown' %></h2>
            
            <% if (currentUser && currentUser.id === profile.id) { %>
              <a href="/posts/new" class="btn btn-outline-secondary btn-sm">Edit Profile</a>
            <% } else { %>
              <button class="btn btn-primary btn-sm">Follow</button>
            <% } %>
          </div>

          <div class="profile-stats">
            <div><span><%= profile.posts ? profile.posts.length : 0 %></span> posts</div>

            <a href="/users/<%= profile.id %>/followers" class="me-3">
              <strong><%= profile.followersCount || 0 %></strong> followers
            </a>

            <a href="/users/<%= profile.id %>/following">
              <strong><%= profile.followingCount || 0 %></strong> following
            </a>
          </div>

          <div class="profile-bio">
            <strong><%= profile.fullName || profile.username %></strong><br />
            <%= profile.bio || '' %><br />
            <% if (profile.website) { %>
              <a href="<%= profile.website %>" target="_blank"><%= profile.website %></a>
            <% } %>
          </div>

          <!-- Optional: View Posts Button -->
          <div class="mt-3">
            <a href="/posts/users/<%= profile.id %>/posts" class="btn btn-outline-primary btn-sm">
              View Posts
            </a>
          </div>

        </div>
      </div>

      <!-- Posts Grid -->
      <div class="posts-grid">
        <% if (profile.posts && profile.posts.length > 0) { %>
          <% profile.posts.forEach(p => { %>
            <a href="/posts/<%= p.id %>">
              <img src="<%= p.imageUrl %>" alt="Post" />
            </a>
          <% }) %>
        <% } else { %>
          <p>No posts yet</p>
        <% } %>
      </div>
    </div>
  </body>
</html>

